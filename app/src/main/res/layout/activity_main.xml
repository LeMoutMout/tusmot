<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#084C61"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/tusmot"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:backgroundTint="#B70E0E"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="B"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_words"
        android:layout_width="387dp"
        android:layout_height="431dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="220dp"
        android:layout_marginBottom="4dp"
        android:gravity="fill_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/A"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="A" />

            <Button
                android:id="@+id/Z"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="Z" />

            <Button
                android:id="@+id/E"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="E" />

            <Button
                android:id="@+id/R"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="R" />

            <Button
                android:id="@+id/T"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="T" />

            <Button
                android:id="@+id/Y"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="Y" />

            <Button
                android:id="@+id/U"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="U" />

            <Button
                android:id="@+id/I"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="I" />

            <Button
                android:id="@+id/O"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="O" />

            <Button
                android:id="@+id/p"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="P" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Q"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="Q" />

            <Button
                android:id="@+id/S"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="S" />

            <Button
                android:id="@+id/D"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="D" />

            <Button
                android:id="@+id/F"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="F" />

            <Button
                android:id="@+id/G"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="G" />

            <Button
                android:id="@+id/H"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="H" />

            <Button
                android:id="@+id/J"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="J" />

            <Button
                android:id="@+id/K"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="K" />

            <Button
                android:id="@+id/L"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="L" />

            <Button
                android:id="@+id/M"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="M" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#00FFFFFF"
                android:src="@mipmap/back" />

            <Button
                android:id="@+id/W"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="W" />

            <Button
                android:id="@+id/X"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="X" />

            <Button
                android:id="@+id/C"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="C" />

            <Button
                android:id="@+id/V"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="V" />

            <Button
                android:id="@+id/B"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="B" />

            <Button
                android:id="@+id/N"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="N" />

            <ImageButton
                android:id="@+id/enterButton"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:src="@mipmap/enter" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>