<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#084C61"
    tools:context=".GameTusmot">

    <ImageButton
        android:id="@+id/homePage"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/grid_words"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525"
        app:srcCompat="@mipmap/home" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="320dp"
        android:layout_height="34dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/grid_words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homePage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="U"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="#C59928"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="M"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="O"
            android:textColor="#C59928"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_words"
        android:layout_width="387dp"
        android:layout_height="431dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePage">

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="220dp"
        android:layout_marginBottom="4dp"
        android:gravity="fill_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/A"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="A" />

            <Button
                android:id="@+id/Z"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="Z" />

            <Button
                android:id="@+id/E"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="E" />

            <Button
                android:id="@+id/R"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="R" />

            <Button
                android:id="@+id/T"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="T" />

            <Button
                android:id="@+id/Y"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="Y" />

            <Button
                android:id="@+id/U"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="U" />

            <Button
                android:id="@+id/I"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="I" />

            <Button
                android:id="@+id/O"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="O" />

            <Button
                android:id="@+id/P"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="P" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Q"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="Q" />

            <Button
                android:id="@+id/S"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="S" />

            <Button
                android:id="@+id/D"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="D" />

            <Button
                android:id="@+id/F"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="F" />

            <Button
                android:id="@+id/G"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="G" />

            <Button
                android:id="@+id/H"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="H" />

            <Button
                android:id="@+id/J"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="J" />

            <Button
                android:id="@+id/K"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="K" />

            <Button
                android:id="@+id/L"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="L" />

            <Button
                android:id="@+id/M"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="M" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#00FFFFFF"
                android:src="@mipmap/back" />

            <Button
                android:id="@+id/W"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="W" />

            <Button
                android:id="@+id/X"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="X" />

            <Button
                android:id="@+id/C"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="C" />

            <Button
                android:id="@+id/V"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_margin="3dp"
                android:backgroundTint="#626262"
                android:padding="0dp"
                android:text="V" />

            <Button
                android:id="@+id/B"
                android:layout_width="33dp"
                android:layout_height="60dp"
